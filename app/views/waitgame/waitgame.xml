<Page navigatedTo="pageNavigatedTo"  xmlns="http://www.nativescript.org/tns.xsd" actionBarHidden="true">
    <StackLayout orientation="vertical">
        <Label text="" style="height:10%" />
        <Label class='nextGameTitle' text="SONRAKİ OYUN" />
        <Label class='nextGame' text="{{ nextGameDateTime }}" />
        <Label class='nextGame' text="{{ nextGamePrize }}" />
        <Label text="" style="height:10%" />
        <StackLayout orientation="vertical" class="whitebox">
            <Label class='username' text="{{ username }}" />
            <StackLayout class="h-line"></StackLayout>
            <Label class='balanceTitle' text="BAKİYE" />
            <Label class='balance' text="{{ userBalance }}" />
        </StackLayout>
    </StackLayout>
</Page>
