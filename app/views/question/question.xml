<Page navigatedTo="navigatedTo" xmlns="http://www.nativescript.org/tns.xsd" actionBarHidden="true">
    <StackLayout>
        <Label class='Header' text="{{ questionNumber }}" />
        <StackLayout class='QuestionBox'> 
            <Label class='Question' text="{{ question }}" textWrap="true" />
        </StackLayout>
        <Label text='   '/>
        <Button text="{{ answer1 }}" tap="changeColor" id='0'/>
        <Button text="{{ answer2 }}" tap="changeColor" id='1'/>
        <Button text="{{ answer3 }}" tap="changeColor" id='2'/>
    </StackLayout>
</Page>
